    <Content Include="..\..\..\..\src\Services\Identity\ECommerce.Services.Identity.Api\appsettings.json"
             CopyToOutputDirectory="PreserveNewest"/>
    <Content Include="..\..\..\..\src\Services\Identity\ECommerce.Services.Identity.Api\appsettings.test.json"
             CopyToOutputDirectory="PreserveNewest"/>
  </ItemGroup>

